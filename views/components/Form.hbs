{{#if urlDB}}
    <form action="/editar/{{urlDB._id}}" method="post">
        <input value="{{urlDB.origin}}" type="text" placeholder="ingresar url" name="origin" class="form-control my-2">
        <button type="submit" class="btn btn-warning w-100 mb-2">Editar Url</button>
    </form>

    {{else}}

    <form action="/" method="post">
        <input type="text" placeholder="ingresar url" name="origin" class="form-control my-2">
        <button type="submit" class="btn btn-primary w-100 mb-2">Agregar Url</button>
    </form>
{{/if}}

